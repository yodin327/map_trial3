<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_card"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/md_theme_light_surface"
    app:strokeColor="@color/md_theme_light_primary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:src="@android:drawable/ic_dialog_map"
            android:tint="@color/md_theme_light_primary"
            android:contentDescription="즐겨찾기 아이콘" />

        <TextView
            android:id="@+id/favorite_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="집"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onSurface"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/favorite_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메인 스트리트 123"
            android:textSize="12sp"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
